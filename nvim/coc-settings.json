{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod", ".git/", ".hg/"],
			"filetypes": ["go"]
		},
		"cpp": {
			"command": "clangd",
			"args" : ["--clang-tidy"],
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootPatterns": [".git","compile_commands.json"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/clangd-cache"
				},
				"client": {
					"snippetSupport": true
				}
			}
		}
	}
}
