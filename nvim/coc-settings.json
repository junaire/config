{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
	"ccls": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".git","compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/clangd-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  }
}
